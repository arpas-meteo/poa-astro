---
// Component Imports
import Button from "../components/Button.astro";
import Stazione, { IStazione } from "../components/Stazione.astro";

// POA API
const response = await fetch("https://poa.alai.one/poa/anagrafica");
const stazioni = await response.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro + TailwindCSS</title>
  </head>

  <body>
    <div>
      <ul>
        {
          stazioni.map((stazio: IStazione) => (
            <Stazione stazio={stazio}> </Stazione>
          ))
        }
      </ul>
      <Button>Tailwind Button in Astro!</Button>
      <a href="/markdown-page" class="p-4 underline"
        >Markdown is also supported...</a
      >
    </div>
  </body>
</html>
