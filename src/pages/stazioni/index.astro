---
// Component Imports
import Stazione from "../../components/Stazione.astro";
import { IStazione } from "../../tipi/stazione.js";
import { anagrafica } from "../../tipi/anagrafica";

// POA API
const stazioni = anagrafica;
const selezione = stazioni; //.splice(1, 10);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Poa</title>
  </head>

  <body>
    <div class="container max-w-max mx-1 bg-slate-50">
      <h4>Progetto Poa - Stazioni</h4>
      <ul class="flex flex-wrap">
        {
          selezione.map((stazio: IStazione) => (
            <Stazione stazio={stazio}> </Stazione>
          ))
        }
      </ul>
    </div>
  </body>
</html>
